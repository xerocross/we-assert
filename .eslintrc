{
    "parser" : "babel-eslint",
    "plugins": ["jest"],
    "env": {
        "browser" : true,
        "commonjs": true,
        "node": true,
        "jest/globals": true
    },
    "extends": [
        "eslint:recommended"
    ],
    "rules": {
        "space-before-function-paren": ["error", "always"],
        "comma-spacing": ["error", { "before": false, "after": true }],
        "brace-style": "error",
        "space-before-blocks" : "error",
        "comma-dangle": ["error", "never"],
        "array-bracket-spacing": ["error", "never", {}],
        "space-infix-ops": ["error", {"int32Hint": false}],
        "no-console": "off",
        "indent": ["error", 4],
        "key-spacing": ["error", {
            "beforeColon": true,
            "afterColon": true,
            "mode": "strict"
        }]
    },
    "globals" : {
        "NODE_ENV" : false,
        "expect" : false,
        "test" : false,
        "console" : false
    }
}